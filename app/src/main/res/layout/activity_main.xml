<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eferhatg.bar_animation.MainActivity">

    <com.eferhatg.animatedbargraph.AnimatedBarGraph
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:layout_margin="10dp"
        app:anim_duration="850"
        app:to_inPixel="100"

        android:id="@+id/abg"/>
    <com.eferhatg.animatedbargraph.AnimatedBarGraph
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/abg"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        app:to_inPercentOfParent="80"
        app:anim_duration="650"
        android:id="@+id/abg2"/>
    <com.eferhatg.animatedbargraph.AnimatedBarGraph
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/abg2"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        app:anim_duration="450"
        app:to_inPixel="500"

        android:id="@+id/abg3"/>
    <com.eferhatg.animatedbargraph.AnimatedBarGraph
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/abg3"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        app:to_inPercentOfParent="50"
        app:anim_duration="50"
        android:id="@+id/abg4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btn"
        android:text="Çalıştır"/>
</RelativeLayout>
